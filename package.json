{
  "name": "orders-api",
  "version": "1.0.0",
  "description": "A minimal order pai using aws serverless architectiure",
  "main": "dist/infrastructure/server/handler.js",
  "types": "dist/infrastructure/server/handler.d.ts",
  "scripts": {
    "start": "IS_LOCAL=true ORDERS_TABLE=orders-dev ts-node src/infrastructure/server/local.ts",
    "deploy": "sls deploy",
    "invoke:local": "sls invoke local -f api --path test-event.json",
    "test": "jest --detectOpenHandles --forceExit",
    "test:unit": "jest --detectOpenHandles --forceExit -t unit",
    "test:int": "jest --detectOpenHandles --forceExit -t integration",
    "test:watch": "jest --watch",
    "jest:clear-cache":"jest --clearCache",
    "test-coverage":"jest --detachOpenHandles --forceExit --coverage",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "repository": "https://github.com/ogagaCodes/Backend-test.git",
  "author": "ogagaCodes <ogagaadjaro@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@serverless/typescript": "^4.11.1",
    "@types/aws-lambda": "^8.10.148",
    "@types/express": "^5.0.1",
    "@types/express-validator": "^3.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "@aws-sdk/client-dynamodb": "^3.540.0",
    "@aws-sdk/lib-dynamodb": "^3.540.0",
    "@aws-sdk/util-dynamodb": "^3.540.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "prettier": "^3.5.3",
    "serverless": "^4.11.1",
    "serverless-offline": "^14.4.0",
    "serverless-plugin-typescript": "^2.1.5",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@vendia/serverless-express": "^4.12.6",
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1692.0",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  }
}
